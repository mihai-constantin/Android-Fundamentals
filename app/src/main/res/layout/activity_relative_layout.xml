<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".week3.RelativeLayoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/space_64"
            android:layout_height="@dimen/space_64"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginRight="@dimen/space_64"
            android:background="@color/orange"
            android:padding="@dimen/space_32" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/space_64"
            android:layout_height="@dimen/space_64"
            android:layout_marginTop="@dimen/space_16"
            android:layout_toRightOf="@id/textView1"
            android:background="@color/pale_green"
            android:padding="@dimen/space_32" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/space_64"
            android:layout_height="@dimen/space_64"
            android:layout_marginTop="@dimen/space_16"
            android:layout_toRightOf="@id/textView2"
            android:background="@color/green"
            android:padding="@dimen/space_32" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/space_64"
            android:layout_height="@dimen/space_64"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:background="@color/red"
            android:padding="@dimen/space_32" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:text="@string/scroll_view"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:text="@string/scroll_view"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:text="@string/scroll_view"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:text="@string/scroll_view"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:text="@string/scroll_view"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"/>

    </RelativeLayout>


</ScrollView>